<!-- app/views/cars/new.html.erb -->
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add your car :</h3>
        <%= simple_form_for @car do |f| %>
          <%= f.input :make, placeholder: 'Honda' %>
          <%= f.input :model, placeholder: 'H6' %>
          <%= f.input :price_per_day, placeholder: 'Please insert a daily rate in Rands' %>
          <%= f.input :image, as: :file %>
          <%= f.submit class: 'btn-ghost' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
